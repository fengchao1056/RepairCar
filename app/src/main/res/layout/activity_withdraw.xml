<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".activity.mine.WithdrawActivity">


    <include layout="@layout/toobar_return_white"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额" />

        <com.nengyuanbox.repaircar.view.ClearEditText
            android:layout_marginTop="10dp"
            android:id="@+id/et_price"
            style="@style/text_style_14sp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:hint="请输入充值金额"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:paddingRight="20dp"
            android:textColor="@color/black" />


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

                <TextView
                    style="@style/text_style_14sp"
                    android:text="当前余额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_money"
                   style="@style/text_style_14sp"
                   android:textColor="@color/txt_orange"
                    android:text="0.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
               <TextView
                   style="@style/text_style_14sp"
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

           </LinearLayout>

         <View
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:background="@color/e"
             android:layout_width="match_parent"
             android:layout_height="1dp"></View>
          <TextView

              android:text="*提现到微信钱包"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />


          <Button
              android:id="@+id/bt_withdraw"
              android:layout_marginTop="120dp"
              android:textColor="@color/white"
              android:text="确认提现"
              android:layout_gravity="center"
              android:background="@drawable/bg_btn_login_selected"
              android:layout_width="250dp"
              android:layout_height="45dp" />


    </LinearLayout>

</LinearLayout>