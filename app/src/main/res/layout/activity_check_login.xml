<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.mine.CheckLoginActivity">

    <include layout="@layout/toobar_return_white"></include>


      <LinearLayout
          android:padding="20dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <com.nengyuanbox.repaircar.view.CircleImageView
              android:id="@+id/iv_imagehead"
              android:layout_width="100dp"
              android:layout_height="100dp"

              android:layout_gravity="center_vertical"
              android:scaleType="centerCrop" />

           <LinearLayout
               android:layout_marginLeft="30dp"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/tv_my_name"
                   style="@style/text_style_20sp"
                   android:textColor="@color/txt_101010"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginTop="10dp"
                   android:id="@+id/tv_my_phone"
                   style="@style/text_style_14sp"
                   android:textColor="@color/txt_bbbbbb"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>


      </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_rol"
        android:paddingLeft="30dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton

            android:id="@+id/rb_master"
            android:textColor="@color/txt_3b3b3b"
            style="@style/checkBoxStyle"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:text="我是维修师傅" />

        <RadioButton
            android:id="@+id/rb_store"
            android:layout_marginTop="10dp"
            android:textColor="@color/txt_3b3b3b"
            style="@style/checkBoxStyle"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:text="我是门店" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_people"
            android:layout_marginTop="10dp"
            android:textColor="@color/txt_3b3b3b"
            style="@style/checkBoxStyle"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:text="我是个人，我要报修" />

    </RadioGroup>


    <Button
        style="@style/text_style_14sp"
        android:id="@+id/btn_net_step"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn_login_selected"
        android:text="下一步"
        android:textColor="@color/white" />


</LinearLayout>