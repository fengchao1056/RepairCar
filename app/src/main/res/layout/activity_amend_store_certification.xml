<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.registered.StoreCertificationActivity">

    <include layout="@layout/toobar_return_white"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <!--姓       名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_14sp"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="门店名称"
                    android:textColor="@color/text_323232" />

                <EditText
                    android:id="@+id/et_master_name"
                    style="@style/text_style_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:hint="请输入姓名" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_eeeeee"></View>

            <!--姓       名-->
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_14sp"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="门店地址"
                    android:textColor="@color/text_323232" />

                <TextView
                    android:id="@+id/tv_master_address"
                    style="@style/text_style_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="输入详细地址定位" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_eeeeee"></View>


            <!--身份证号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_14sp"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="@color/text_323232" />

                <EditText
                    android:id="@+id/et_master_card"
                    style="@style/text_style_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:digits="1234567890"
                    android:hint="请输入联系电话"
                    android:inputType="number"
                    android:maxLength="11" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_eeeeee"></View>


            <!--维修经验-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_14sp"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="门店类型"
                    android:textColor="@color/text_323232" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_hui">

                    <org.angmarch.views.NiceSpinner

                        android:id="@+id/sp_master_experience"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overlapAnchor="false">

                    </org.angmarch.views.NiceSpinner>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_eeeeee"></View>


            <!--维修类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="维修类型"
                    android:textColor="@color/text_323232" />

                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/rv_master_type"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->
                <!--</android.support.v7.widget.RecyclerView>-->
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/rl_master_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:flexWrap="wrap" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_eeeeee"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/text_style_14sp"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="门店照片"
                    android:textColor="@color/text_323232" />

                <ImageView
                    android:src="@drawable/requestout"
                    android:id="@+id/iv_store_img"
                    android:layout_marginLeft="20dp"
                    android:layout_width="217dp"
                    android:layout_height="120dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_eeeeee"></View>
            <!--手机号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理员手机号码"
                    android:textColor="@color/text_323232" />

                <EditText
                    android:id="@+id/et_master_phone"
                    style="@style/text_style_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:digits="1234567890"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:maxLength="11" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_eeeeee"></View>

            <!--手机号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_14sp"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="短信验证"
                    android:textColor="@color/text_323232" />

                <EditText
                    android:id="@+id/et_sms_verification"
                    style="@style/text_style_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:digits="1234567890"
                    android:hint="请输入短信验证"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/tv_secority_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="获取验证码"
                    android:textColor="@color/txt_447ED9" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_eeeeee"></View>







            <Button
                android:id="@+id/bt_verified"
                style="@style/bt_login_orange"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:enabled="false"
                android:text="实名认证" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>