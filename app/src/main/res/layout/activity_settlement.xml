<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.goods.SettlementActivity">

    <include layout="@layout/toobar_return_white"></include>


    <LinearLayout
        android:id="@+id/ll_address_modify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_location"

            />
        <TextView
            android:id="@+id/tv_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新建收货地址，保证商品顺利送达！" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_address"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_receiver"
                style="@style/text_style_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:text="收货人：谢安琪 187***5593" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/text_style_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:text="上海上海市松江区兴联中心110号" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_return" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_eeeeee"></View>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp">


        <TextView
            style="@style/text_style_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单信息"
            android:textColor="@color/txt_101010" />

        <TextView
            android:id="@+id/tv_delivery_name"
            style="@style/text_style_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="由华夏配件负责配送"
            android:textColor="@color/txt_101010" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_goods_img"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:src="@drawable/requestout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_enent_goods_name"
                    style="@style/text_style_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="超威经典电池48v12AH（4只/组）"
                    android:textColor="@color/txt_101010" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_enent_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_red" />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_enent_goods_oldprice"
                        style="@style/text_style_12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="原价：***"
                        android:textColor="@color/txt_bbbbbb" />

                    <LinearLayout
                        android:id="@+id/ll_add_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                     >

                        <ImageView
                            android:id="@+id/iv_reduce"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_remove" />

                        <EditText

                            android:id="@+id/et_acount"
                            style="@style/text_style_14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:background="@color/white"
                            android:hint="x1"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp" />

                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_add" />



                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


             <TextView
                 android:layout_weight="1"
                 style="@style/text_style_14sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="支付金额"
                 android:textColor="@color/txt_101010" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_unit"
                        style="@style/text_style_12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共计1件商品"
                        android:textColor="@color/txt_101010" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        style="@style/text_style_12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总计："
                        android:textColor="@color/txt_101010" />
                    <TextView
                        android:id="@+id/tv_total_price"
                        style="@style/text_style_12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_101010" />
                </LinearLayout>




         </LinearLayout>


       <com.nengyuanbox.repaircar.view.ContainsEmojiEditText
           android:id="@+id/et_remark"
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:background="@drawable/button_hui"
           android:hint="备注(选填)"
           android:maxLength="200"
           android:paddingLeft="15dp"
           android:paddingTop="15dp"
           android:paddingRight="15dp"
           android:textSize="14sp"
           android:textColor="@color/_9"
           android:layout_height="70dp" />


    </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="48dp">
          <Button
              android:id="@+id/bt_pay_order"
              android:layout_alignParentRight="true"
              android:text="支付订单"
              android:textColor="@color/white"
              android:background="@drawable/button_red_shape"
              android:layout_width="110dp"
              android:layout_height="48dp" />


          <TextView
              style="@style/text_style_14sp"
              android:textColor="@color/txt_101010"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@+id/tv_order_money"
              android:text="实付金额：" />
          <TextView

              android:layout_marginRight="10dp"
              style="@style/text_style_14sp"
              android:textColor="@color/txt_red"
              android:id="@+id/tv_order_money"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@+id/bt_pay_order"
            />


          <TextView
              android:id="@+id/tv_freight"
              style="@style/text_style_14sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignEnd="@+id/tv_order_money"
              android:layout_alignParentBottom="true"
              android:layout_marginEnd="-1dp"
              android:layout_marginBottom="4dp"
              android:text="（免运费）"
              android:textColor="@color/txt_101010" />







      </RelativeLayout>


</LinearLayout>