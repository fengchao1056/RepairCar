<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.registered.StorBusinessLicenseActivity">

    <include
        android:id="@+id/il_title"
        layout="@layout/toobar_return_white"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/il_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <TextView
            style="@style/text_style_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请上传"
            android:textColor="@color/txt_3b3b3b" />

        <TextView
            android:id="@+id/tv_license"
            style="@style/text_style_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****"
            android:textColor="@color/txt_3b3b3b" />

        <TextView
            style="@style/text_style_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="的营业执照照片"
            android:textColor="@color/txt_3b3b3b" />


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_license"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="54dp"
        android:layout_marginTop="114dp"
        android:src="@mipmap/icon_stor_register" />




    <Button

        android:id="@+id/bt_next_step"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_butten_et"
        android:enabled="false"
        android:text="实名认证"
        android:textColor="@color/white" />


</RelativeLayout>