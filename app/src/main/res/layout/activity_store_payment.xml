<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.registered.MastPaymentActivity">

    <include layout="@layout/toobar_return_white"></include>

    <TextView
        style="@style/text_style_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="需支付平台入驻费"
        android:textColor="@color/text_909090" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:text="￥"
            android:textColor="@color/txt_red" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_money"
            android:textColor="@color/txt_red"
            android:textSize="30sp" />


    </LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/text_style_12sp"
        android:id="@+id/tv_price_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/txt_bbbbbb"
       />

    <TextView
        android:layout_marginBottom="20dp"
        style="@style/text_style_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="* 如未通过实名认证，入驻费用退回原支付账号。"
        android:textColor="@color/text_909090" />

    <!--姓       名-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_eeeeee"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:checked="true"
            android:id="@+id/ck_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/tv_agreement"
            style="@style/text_style_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            android:text="请仔细阅读并同意《来修车》入驻协议"
            android:textColor="@color/txt_447ed9" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_eeeeee"></View>

    <Button
        android:id="@+id/bt_payment"
        style="@style/bt_login_red"
        android:layout_marginTop="30dp"
        android:enabled="true"
        android:text="去支付" />

      <LinearLayout
          android:id="@+id/ll_store_maplist"
          android:paddingLeft="15dp"
          android:layout_marginTop="10dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
              <TextView
                  android:text="*入驻费用包含全渠道地图标注服务，包括："
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/tv_map_list"
               android:text="
    高德地图
    百度地图
    腾讯地图
    凯立德地图
    苹果地图
    360地图
    搜狗地图
"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />




      </LinearLayout>

</LinearLayout>