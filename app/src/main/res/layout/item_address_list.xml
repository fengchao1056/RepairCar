<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/text_style_14sp"
            android:textColor="@color/txt_101010"
            android:id="@+id/tv_address_name"
            android:layout_weight="1"
            android:text="测试人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/text_style_14sp"
            android:textColor="@color/txt_101010"
            android:id="@+id/tv_address_phone"
            android:text="159****12123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <TextView
        style="@style/text_style_12sp"
        android:textColor="@color/txt_666466"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_address"
        android:text="159****12123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_eeeeee"></View>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/ck_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_marginLeft="10dp"
            style="@style/text_style_14sp"
            android:textColor="@color/txt_101010"
            android:layout_weight="1"
            android:text="测试人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/text_style_14sp"
            android:textColor="@color/txt_101010"
            android:text="编辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_marginLeft="30dp"
            style="@style/text_style_14sp"
            android:textColor="@color/txt_101010"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



</LinearLayout>