<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.registered.StorBusinessLicenseActivity">

    <include layout="@layout/toobar_return_white"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <TextView
            style="@style/text_style_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请上传"
            android:textColor="@color/txt_3b3b3b" />

        <TextView
            android:id="@+id/tv_license"
            style="@style/text_style_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****"
            android:textColor="@color/txt_3b3b3b" />

        <TextView
            style="@style/text_style_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="的营业执照照片"
            android:textColor="@color/txt_3b3b3b" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_license"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_lincese" />


    </RelativeLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/rb_no_license"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@style/checkBoxStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有营业执照 " />


    </LinearLayout>


    <Button
       android:id="@+id/bt_next_step"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_butten_et"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/white" />


</LinearLayout>