<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_height="wrap_content">

        <LinearLayout

            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">




            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


             <LinearLayout
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <TextView
                     android:id="@+id/tv_voucher_price"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="2"
                     android:textColor="@color/txt_red"
                     android:textSize="30sp" />
                 <TextView
                     android:layout_marginLeft="5dp"
                     android:gravity="center_vertical"
                     android:layout_gravity="center_vertical"
                      style="@style/text_style_14sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="元" />
             </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/txt_bbbbbb"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:id="@+id/tv_name"
                     style="@style/text_style_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动抵扣" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_voucher_name"
                    android:textColor="@color/txt_101010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="师傅上门费抵用券" />

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_14sp"
                        android:textColor="@color/txt_bbbbbb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有限期:" />

                    <TextView
                        style="@style/text_style_14sp"
                        android:textColor="@color/txt_bbbbbb"
                        android:id="@+id/tv_voucher_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-06-13-2018-17-13" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


</android.support.v7.widget.CardView>