<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.goods.AddAddressActivity">

    <include layout="@layout/toobar_return_white"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp">


        <!--姓       名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_style_14sp"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:text="收货人"
                android:textColor="@color/text_323232" />

            <EditText
                android:id="@+id/et_master_name"
                style="@style/text_style_14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:hint="请输入收货人姓名" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_eeeeee"></View>


        <!--手机号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_style_14sp"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/text_323232" />

            <EditText
                android:id="@+id/et_master_phone"
                style="@style/text_style_14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:digits="1234567890"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_eeeeee"></View>


        <!--手机号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_style_14sp"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:text="省市地区"
                android:textColor="@color/text_323232" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/text_style_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="11"
                android:text="点击选择" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_eeeeee"></View>

        <!--手机号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_style_14sp"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:text="详细地址"
                android:textColor="@color/text_323232" />

            <com.nengyuanbox.repaircar.view.ContainsEmojiEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:maxLength="200"
                android:layout_height="wrap_content"
                android:hint="请输入详细地址（5-120个字）"
                android:gravity="top|left"
                android:background="@color/white" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_eeeeee"></View>
        <LinearLayout
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:text="设置默认地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.kyleduo.switchbutton.SwitchButton
                android:layout_width="50dp"
                android:checked="true"
                app:kswTintColor="@color/gallery_blue"
                android:layout_height="25dp" />



        </LinearLayout>
    </LinearLayout>






    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_finish"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_btn_login_selected"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>