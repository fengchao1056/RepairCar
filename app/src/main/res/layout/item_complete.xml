<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_processed"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_repair_time"
                style="@style/text_style_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="报修时间"
                android:textColor="@color/txt_101010" />

            <LinearLayout
                android:id="@+id/ll_departed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_state"
                    style="@style/text_style_13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已出发"
                    android:textColor="@color/txt_bbbbbb" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/iv_return" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_client_info"
                        style="@style/text_style_13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障备注"
                        android:textColor="@color/txt_9D9D9D" />

                    <!--<TextView-->
                        <!--android:id="@+id/tv_car_type"-->
                        <!--style="@style/text_style_13sp"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:text="雅迪电动车"-->
                        <!--android:textColor="@color/txt_9D9D9D" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/tv_malfunction_remarks"-->
                        <!--style="@style/text_style_13sp"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:text="雅迪电动车"-->
                        <!--android:textColor="@color/txt_9D9D9D" />-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/text_style_13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期望时间："
                        android:textColor="@color/txt_9D9D9D" />

                    <TextView
                        android:id="@+id/tv_expectation_time"
                        style="@style/text_style_13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="****"
                        android:textColor="@color/txt_9D9D9D" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_client_address"
                        style="@style/text_style_13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="****"
                        android:textColor="@color/txt_9D9D9D" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:id="@+id/ll_repair_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="客户评价："
                        android:textColor="@color/txt_9D9D9D" />

                    <TextView
                        android:id="@+id/tv_repair_star"
                        style="@style/text_style_13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="*"
                        android:textColor="@color/txt_9D9D9D" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/iv_star_one" />

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>