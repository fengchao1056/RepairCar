<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/iv_enent_goods_img"
        android:layout_width="100dp"
        android:layout_height="100dp" />



     <LinearLayout

         android:layout_marginLeft="20dp"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

          <TextView
              style="@style/text_style_14sp"
              android:textColor="@color/txt_101010"
              android:text="购买商品"
              android:maxLines="2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/tv_enent_goods_order"
               style="@style/text_style_12sp"
               android:text="订单号："
               android:textColor="@color/text_646464"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
         <TextView
               android:id="@+id/tv_enent_goods_oldprice"
               style="@style/text_style_12sp"
               android:text="下单时间："
               android:textColor="@color/text_646464"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <LinearLayout
               android:gravity="center_vertical"
               android:layout_gravity="center_vertical"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_enent_goods_price"
                    android:textColor="@color/txt_101010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


              <Button

                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:id="@+id/bt_goods_revocation"
                  android:text="撤销"
                  style="@style/text_style_12sp"
                  android:textColor="@color/txt_101010"
                  android:background="@drawable/button_hui"
                  android:layout_width="80dp"
                  android:layout_height="23dp" />
               <Button
                   style="@style/text_style_12sp"
                  android:id="@+id/bt_enent_goods_buy"

                  android:text="立即购买"
                  android:textColor="@color/white"
                  android:background="@drawable/button_red_shape"
                  android:layout_width="80dp"
                  android:layout_height="23dp" />

           </LinearLayout>

     </LinearLayout>




</LinearLayout>