<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.registered.MasterCertificationActivity">

    <include layout="@layout/toobar_return_white"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--姓       名-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@color/text_323232"
                    style="@style/text_style_14sp"
                    android:text="姓       名"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:hint="请输入姓名"
                    android:id="@+id/et_master_name"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="@color/view_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>


            <!--身份证号-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@color/text_323232"
                    style="@style/text_style_14sp"
                    android:text="身份证号"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:hint="请输入身份证号"
                    android:id="@+id/et_master_card"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="20dp"
                    android:maxLength="18"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="@color/view_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>


            <!--维修经验-->
            <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:textColor="@color/text_323232"
                style="@style/text_style_14sp"
                android:text="维修经验"
                android:layout_width="66dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_hui">

                <org.angmarch.views.NiceSpinner

                    android:overlapAnchor="false"
                    android:id="@+id/sp_master_experience"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </org.angmarch.views.NiceSpinner>
            </LinearLayout>
        </LinearLayout>
            <View
                android:background="@color/view_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>



            <!--维修类型-->
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_323232"
                    style="@style/text_style_14sp"
                    android:text="维修类型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/rv_master_type"-->
                    <!--android:layout_marginRight="15dp"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                <!--</android.support.v7.widget.RecyclerView>-->
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_marginLeft="20dp"
                    android:id="@+id/rl_master_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap" />
            </LinearLayout>
            <View
                android:background="@color/view_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>



            <!--服务类型-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_323232"
                    style="@style/text_style_14sp"
                    android:text="服务类型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_marginLeft="20dp"
                    android:id="@+id/rl_service_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap" />
            </LinearLayout>


            <View
                android:background="@color/view_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <!--手机号码-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@color/text_323232"
                    style="@style/text_style_14sp"
                    android:text="手机号码"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:hint="请输入手机号码"
                    android:maxLength="11"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:id="@+id/et_master_phone"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="@color/view_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <!--手机号码-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textColor="@color/text_323232"
                    style="@style/text_style_14sp"
                    android:text="短信验证"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:hint="请输入短信验证"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:id="@+id/et_sms_verification"
                    style="@style/text_style_14sp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_secority_code"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/txt_447ED9"
                    android:text="获取验证码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/view_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>


            <Button
                android:id="@+id/bt_verified"
                style="@style/bt_login_orange"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:enabled="false"
                android:text="实名认证" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>